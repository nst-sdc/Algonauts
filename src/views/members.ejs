<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CP Club - Members</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="content">
        <h1 class="page-title">CP Club Members</h1>

        <div class="team-container">
            <% const platformLinks = {
                codeforces: 'https://codeforces.com',
                codechef: 'https://www.codechef.com',
                leetcode: 'https://leetcode.com'
            } %>

            <% const members = [
                { name: "Member 1", title: "President", role: "Expert (1800+ CF)", img: "/api/placeholder/member1", links: ["codeforces", "codechef"] },
                { name: "Member 2", title: "Vice President", role: "Specialist (1600+ CF)", img: "/api/placeholder/member2", links: ["codeforces", "leetcode"] },
                { name: "Member 3", title: "Lead Coordinator", role: "4⭐ Coder (CodeChef)", img: "/api/placeholder/member3", links: ["codechef", "leetcode"] },
                { name: "Member 4", title: "Senior Member", role: "Pupil (1300+ CF)", img: "/api/placeholder/member4", links: ["codeforces", "codechef"] },
                { name: "Member 5", title: "Junior Member", role: "3⭐ Coder (CodeChef)", img: "/api/placeholder/member5", links: ["codechef", "leetcode"] },
                { name: "Member 6", title: "New Recruit", role: "Newbie (Learning DP)", img: "/api/placeholder/member6", links: ["leetcode", "codeforces"] },
            ]; %>

            <% members.forEach(member => { %>
                <div class="member-card">
                    <div class="image-container">
                        <img src="<%= member.img %>" alt="<%= member.name %>">
                    </div>
                    <div class="details">
                        <div class="member-info">
                            <h3><%= member.name %></h3>
                            <p class="member-title"><strong><%= member.title %></strong></p>
                            <p class="member-role"><%= member.role %></p>
                            <div class="platform-links">
                                <% member.links.forEach(link => { %>
                                    <a href="<%= platformLinks[link] %>" target="_blank"><%= link.charAt(0).toUpperCase() + link.slice(1) %></a>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
